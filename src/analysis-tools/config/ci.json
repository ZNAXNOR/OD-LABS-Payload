{
  "analysis": {
    "defaultScope": "full",
    "defaultSeverity": "all",
    "failOnCritical": true,
    "failOnHighCount": 10,
    "timeoutMinutes": 30
  },
  "reporting": {
    "formats": ["json", "html", "console"],
    "artifactRetentionDays": 30,
    "includePerformanceMetrics": true,
    "generateSummary": true
  },
  "performance": {
    "enableProfiling": true,
    "memoryThresholdMB": 512,
    "executionTimeThresholdMs": 30000,
    "enableCaching": true
  },
  "security": {
    "runSecurityScan": true,
    "failOnSecurityIssues": true,
    "scanPatterns": ["dangerouslySetInnerHTML", "eval(", "innerHTML", "document.write"]
  },
  "notifications": {
    "prComments": true,
    "slackWebhook": null,
    "emailNotifications": false
  },
  "thresholds": {
    "overallScore": {
      "excellent": 90,
      "good": 70,
      "needsImprovement": 50
    },
    "coverage": {
      "minimum": 80,
      "target": 90
    },
    "issues": {
      "critical": 0,
      "high": 5,
      "medium": 20
    }
  },
  "paths": {
    "blocksDir": "src/blocks",
    "componentsDir": "src/components",
    "outputDir": "analysis-output",
    "cacheDir": ".cache/analysis"
  },
  "excludePatterns": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    "**/build/**"
  ],
  "includePatterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
