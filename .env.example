# Database Configuration
# PostgreSQL connection string (required)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Payload CMS Configuration
# Secret key for JWT tokens and encryption (required)
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Server Configuration
# Base URL for the application (required for production)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Google Analytics (Optional)
# Google Analytics Property ID
GA_PROPERTY_ID=
# Path to Google Analytics service account credentials JSON file
GA_CREDENTIALS_PATH=
# Google Analytics Measurement ID for frontend tracking
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Email Configuration (Optional - for form builder notifications)
# Option 1: SMTP (Nodemailer)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_FROM_ADDRESS=noreply@example.com
# SMTP_FROM_NAME=Your Site Name

# Option 2: Resend
# RESEND_API_KEY=your-resend-api-key
# RESEND_FROM_ADDRESS=noreply@example.com
# RESEND_FROM_NAME=Your Site Name

# Storage Configuration (Optional - for cloud storage)
# AWS S3
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_REGION=us-east-1
# S3_ENDPOINT=https://s3.amazonaws.com

# Vercel Blob Storage
# BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Development Configuration
# Set to 'development' or 'production'
NODE_ENV=development

# Payload Admin Configuration
# Disable Payload telemetry (optional)
PAYLOAD_DISABLE_ADMIN=false
# Custom admin route (default: /admin)
# PAYLOAD_PUBLIC_ADMIN_ROUTE=/admin

# Next.js Configuration
# Disable Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=0

# Security Configuration
# CORS allowed origins (comma-separated for production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (Optional)
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=900000

# Logging Configuration
# LOG_LEVEL=info
# LOG_FORMAT=json
